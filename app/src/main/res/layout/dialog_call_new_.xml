<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:padding="30dp"

    android:orientation="vertical">


    <LinearLayout
        android:layout_width="330dp"
        android:padding="30dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"


        android:background="@drawable/round_dialog_message"
        android:gravity="center"
        android:orientation="vertical">
        <!---->


        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />



        <TextView
            android:id="@+id/dialoge_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:text="@string/do_you_want_to_contact_with"
            android:textColor="@color/black"
            android:textSize="19dp"
            android:textStyle="bold" />


        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/color_white"
            android:gravity="center"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/lliCallSchool"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="3dp">

                <androidx.appcompat.widget.AppCompatImageView
                    style="@style/TintableImage"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/stroke_circle_trans_to_yello_selector"
                    android:padding="13dp"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/call_school"
                    app:tint="@color/black_to_white_selector" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:singleLine="true"
                    android:lines="1"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="@string/call_school"
                    android:textColor="@color/black_to_gold_selector"
                    android:textSize="12dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lliCallDriver"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="3dp">

                <androidx.appcompat.widget.AppCompatImageView
                    style="@style/TintableImage"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/stroke_circle_trans_to_yello_selector"
                    android:padding="13dp"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/call_driver"
                    app:tint="@color/black_to_white_selector" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:lines="1"
                    android:text="@string/driver_call"
                    android:textColor="@color/black_to_gold_selector"
                    android:textSize="12dp"
                    android:textStyle="bold" />
            </LinearLayout>



            <LinearLayout
                android:id="@+id/lliCallAssistant"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="3dp">

                <androidx.appcompat.widget.AppCompatImageView
                    style="@style/TintableImage"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/stroke_circle_trans_to_yello_selector"
                    android:padding="13dp"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/call_attendent"
                    app:tint="@color/black_to_white_selector" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="@string/call_assistant"
                    android:singleLine="true"
                    android:lines="1"
                    android:textColor="@color/black_to_gold_selector"
                    android:textSize="12dp"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>





        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />


        <Button
            android:id="@+id/imgClose"
            style="@style/AllButtonsStyle"
            android:layout_width="100dp"
            android:scaleX="1"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:background="@drawable/button_green_rectangel_shape"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

        <!--<android.support.v4.widget.Space-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="20dp" />-->

