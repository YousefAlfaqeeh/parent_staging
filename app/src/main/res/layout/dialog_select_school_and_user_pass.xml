<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_background_login__"
    android:scaleX="@integer/scale_ar_en">


    <LinearLayout
        android:id="@+id/fragment_contener"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnSelectLanguge"
            style="@style/AllEditTextStyle"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/button_login_round_shap"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/ar_en"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

        <!--      <LinearLayout
      android:layout_gravity="center_horizontal|center_vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="2"
      android:orientation="vertical">-->

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="30dp"
            android:layout_weight="2"
            android:padding="0dp"
            android:scaleX="@integer/scale_ar_en"
            android:src="@drawable/login_logo" />
        <!-- </LinearLayout>-->

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:orientation="vertical">

            <!--   <EditText
                   android:id="@+id/txtParent_Code"
                   android:layout_marginTop="40dp"
                   android:layout_marginEnd="50dp"
                   android:layout_marginStart="50dp"
                   android:padding="14dp"
                   android:hint="@string/parent_code"
                   android:textColor="@color/color_gray"
                   android:gravity="center"
                   android:textSize="12dp"

                   android:textStyle="bold"
                   android:layout_marginBottom="10dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@drawable/edittext_background_whith_out_border"
               />-->
            <EditText
                android:id="@+id/txtPin"
                style="@style/BDOR.EditText"
                android:layout_width="200dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="50dp"
                android:fontFamily="sans-serif"
                android:hint="@string/login_pincode"
                android:inputType="numberPassword"
                android:maxLength="4"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/labForgetPassword"
                style="@style/AllTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                android:gravity="center"
                android:text="@string/forget_password"
                android:textColor="@color/color_green_light" />

            <!--<View-->
            <!--android:layout_width="105dp"-->
            <!--android:layout_height="1dp"-->
            <!--android:layout_gravity="center"-->
            <!--android:background="@color/color_gray"-->

            <!--&gt;</View>-->

            <Button
                android:id="@+id/btnLogIn"
                style="@style/BDOR.Button"
                android:layout_width="120dp"
                android:layout_marginTop="90dp"
                android:text="@string/log_in" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
