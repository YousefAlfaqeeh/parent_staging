<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:background="@drawable/dialog_round_shape"
        android:gravity="center"
        android:minHeight="250dp"
        android:orientation="vertical"
        android:padding="5dp">
        <!---->


        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <!--android:background="@drawable/stroke_circle"-->

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/dialoge_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:padding="5dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/img_absent"
            app:tint="@color/color_red" />

        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <TextView
            android:id="@+id/dialoge_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:lineSpacingExtra="3dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/will_your_child_be_absent_for"
            android:textColor="@android:color/black"
            android:textSize="17dp"
            android:textStyle="bold" />

        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/the_whole_day_Radio"
                style="@style/RadioButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/the_whole_day" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/only_during_the_morning_Radio"
                style="@style/RadioButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/only_during_the_morning" />

        </RadioGroup>

        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">


<!--            <Button-->
<!--                android:id="@+id/btnCancel"-->
<!--                style="@style/DialogeButton.No"-->
<!--                android:text="@string/cancel" />-->

<!--            <Button-->
<!--                android:id="@+id/btnSubmint"-->
<!--                style="@style/DialogeButton.Yes"-->
<!--                android:text="@string/ok" />-->

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancel"
                style="@style/OutlineButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textColor="@color/blue_background"
                app:cornerRadius="30dp"
                android:includeFontPadding="false"
                android:padding="0dp"
                android:text="@string/cancel"
                app:strokeColor="@color/blue_background" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSubmint"
                style="@style/OutlineButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textColor="@color/color_red"
                app:cornerRadius="30dp"
                android:includeFontPadding="false"
                android:padding="0dp"
                android:text="@string/ok"
                app:strokeColor="@color/color_red" />



        </LinearLayout>

        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

    </LinearLayout>

