<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="7dp"
        android:background="@drawable/round_dialog_message"
        android:gravity="center"
        android:orientation="vertical">
        <!---->


        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="35dp" />

        <LinearLayout
            android:scaleX="@integer/scale_ar_en"
            android:id="@+id/lliCallSchool"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:background="@drawable/button_call_selector"
            android:weightSum="3">


            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="end|center_vertical"
                android:layout_weight="1"
                android:gravity="end|center_vertical"
                android:padding="20dp"
                app:srcCompat="@drawable/img_call_with_new"
                app:tint="@color/color_white" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:background="@color/color_white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleX="@integer/scale_ar_en"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/call_school"
                android:textAllCaps="false"
                android:textColor="@color/color_white"
                android:textSize="18dp" />

        </LinearLayout>

        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />


        <LinearLayout
            android:id="@+id/lliCallDriver"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:scaleX="@integer/scale_ar_en"
            android:layout_weight="1"
            android:background="@drawable/button_call_selector"
            android:weightSum="3">


            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="end|center_vertical"
                android:layout_weight="1"
                android:gravity="end|center_vertical"
                android:padding="20dp"
                app:srcCompat="@drawable/img_call_with_new"
                app:tint="@color/color_white" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:background="@color/color_white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:gravity="center"
                android:scaleX="@integer/scale_ar_en"
                android:text="@string/driver_call"
                android:textAllCaps="false"
                android:textColor="@color/color_white"
                android:textSize="18dp" />

        </LinearLayout>





        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />



        <LinearLayout
            android:id="@+id/lliCallAssistant"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:scaleX="@integer/scale_ar_en"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:background="@drawable/button_call_selector"
            android:weightSum="3">


            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="end|center_vertical"
                android:layout_weight="1"
                android:gravity="end|center_vertical"
                android:padding="20dp"
                app:srcCompat="@drawable/img_call_with_new"
                app:tint="@color/color_white" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:background="@color/color_white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleX="@integer/scale_ar_en"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/call_assistant"
                android:textAllCaps="false"
                android:textColor="@color/color_white"
                android:textSize="18dp" />

        </LinearLayout>





        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />


    </LinearLayout>


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgClose"
        style="@style/TintableImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/img_close"
        app:tint="@drawable/nochange_to_dark_tint_selector" />
    <!--app:srcCompat="@drawable/close_button"-->
    <!--app:tint="@drawable/nochange_to_dark_tint_selector"-->
</RelativeLayout>

