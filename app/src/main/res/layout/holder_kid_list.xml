<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="20dp"
    android:background="@drawable/kids_list_background"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgStudent"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="10dp"
            android:padding="7dp"
            android:scaleX="@integer/scale_ar_en"
            tools:srcCompat="@drawable/img_student" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="0dp"

            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/student_name_textview"
                        style="@style/AllTextViewStyle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_weight="1"
                        android:text="ooooo"
                        android:textColor="@color/color_dark"
                        android:textSize="15dp"
                        android:textStyle="bold" />


                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgMenu"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/stroke_circle"
                        android:padding="5dp"
                        app:backgroundTint="@color/white_to_dark_selector"
                        app:srcCompat="@drawable/img_menu" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/AllTextViewStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:maxLines="1"
                            android:paddingStart="1dp"
                            android:paddingEnd="1dp"
                            android:singleLine="true"
                            android:text="@string/school"
                            android:textColor="@color/color_gray"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/labSchoolName"
                            style="@style/AllTextViewStyle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:lines="1"
                            android:maxLines="1"
                            android:paddingStart="1dp"
                            android:paddingEnd="1dp"
                            android:singleLine="true"
                            android:text="123456789"
                            android:textColor="@color/color_gray"
                            android:textSize="12dp" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            style="@style/AllTextViewStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:maxLines="1"
                            android:paddingStart="1dp"
                            android:paddingEnd="1dp"
                            android:singleLine="true"
                            android:text="@string/grade"
                            android:textColor="@color/color_gray"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/labStudentGrade"
                            style="@style/AllTextViewStyle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:lines="1"
                            android:maxLines="1"
                            android:paddingStart="1dp"
                            android:paddingEnd="1dp"
                            android:singleLine="true"
                            android:text="123456789"
                            android:textColor="@color/color_gray"
                            android:textSize="12dp" />

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:paddingTop="5dp">


        <LinearLayout
            android:id="@+id/lliPickup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="2">

            <FrameLayout
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_weight="1">

                <androidx.appcompat.widget.AppCompatImageView
                    style="@style/TintableImage.DarkOnClick"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/list_kids_images_margin"
                    android:layout_weight="1"
                    android:background="@drawable/button_pick_up_shape"
                    android:padding="@dimen/list_kids_images_padding"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/img_pickup_list"
                    app:tint="@color/color_pick_up" />
            </FrameLayout>

            <TextView
                style="@style/AllTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|top"
                android:layout_weight="1"
                android:gravity="center_horizontal|top"
                android:padding="0dp"
                android:text="@string/pic_up_list"
                android:textColor="@color/student_list_pick_up_color"
                android:textSize="@dimen/list_kid_textsize"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/llBusTracking"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="2">

            <FrameLayout
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_weight="1">

                <androidx.appcompat.widget.AppCompatImageView
                    style="@style/TintableImage.DarkOnClick"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/list_kids_images_margin"
                    android:layout_weight="1"
                    android:background="@drawable/button_bus_tracker_shape"
                    android:padding="@dimen/list_kids_images_padding"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/img_bus_adapter"
                    app:tint="@color/color_bus_track" />
            </FrameLayout>

            <TextView
                style="@style/AllTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|top"
                android:layout_weight="1"
                android:gravity="center_horizontal|top"
                android:padding="0dp"
                android:text="@string/bus_track"
                android:textColor="@color/student_list_bustrack_color"
                android:textSize="@dimen/list_kid_textsize"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llAbsent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="2">

            <FrameLayout
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_weight="1">

                <androidx.appcompat.widget.AppCompatImageView
                    style="@style/TintableImage.DarkOnClick"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/list_kids_images_margin"
                    android:layout_weight="1"
                    android:background="@drawable/button_absent_shape"
                    android:padding="@dimen/list_kids_images_padding"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/img_absent"
                    app:tint="@color/color_absent" />
            </FrameLayout>

            <TextView
                style="@style/AllTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|top"
                android:layout_weight="1"
                android:gravity="center_horizontal|top"
                android:padding="0dp"
                android:text="@string/absent"
                android:textColor="@color/student_list_absent_color"
                android:textSize="@dimen/list_kid_textsize"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/llCallWith"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="2">

            <FrameLayout
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_weight="1">

                <androidx.appcompat.widget.AppCompatImageView
                    style="@style/TintableImage.DarkOnClick"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/list_kids_images_margin"
                    android:layout_weight="1"
                    android:background="@drawable/button_call_with_shape"
                    android:padding="@dimen/list_kids_images_padding"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/img_call_with"
                    app:tint="@color/color_call_with" />


            </FrameLayout>

            <TextView
                style="@style/AllTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|top"
                android:layout_weight="1"
                android:gravity="center_horizontal|top"
                android:padding="0dp"
                android:text="@string/call_with"
                android:textColor="@color/student_list_call_color"
                android:textSize="@dimen/list_kid_textsize"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>


    <!--<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1.8">

        </View>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/color_gray">

        </View>


    </LinearLayout>-->


</LinearLayout>