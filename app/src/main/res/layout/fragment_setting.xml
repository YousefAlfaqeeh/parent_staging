<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efeff6"
    android:orientation="vertical"
    android:scaleX="@integer/scale_ar_en">


    <include
        layout="@layout/app_toolbar_header"
        android:id="@id/toolBarMainView"
        android:layout_width="match_parent"
        android:layout_height="70dp"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <LinearLayout

            android:layout_width="match_parent"


            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start|center_vertical"
                android:background="@android:color/white"
                android:gravity="start|center_vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_marginTop="8dp"
                android:scaleX="@integer/scale_ar_en">

                <include layout="@layout/list_setting"

                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llLogOut"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="end|center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/white_button_selector"
                android:gravity="end|center_vertical"
                android:paddingBottom="5dp"
                android:weightSum="1"
                android:visibility="gone"
                android:paddingStart="30dp"
                android:layout_marginTop="8dp"
                android:paddingEnd="30dp"
                android:paddingTop="5dp">



                <TextView
                    style="@style/AllTextViewStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start|center_vertical"
                    android:layout_gravity="start|center_vertical"
                    android:scaleX="@integer/scale_ar_en"
                    android:text="@string/log_out"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />



                <ImageView
                    android:gravity="end|center_vertical"
                    android:layout_gravity="end|center_vertical"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="centerInside"
                    android:padding="0dp"
                    android:scaleX="@integer/image_scale"
                    android:src="@drawable/img_logout" />




            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>