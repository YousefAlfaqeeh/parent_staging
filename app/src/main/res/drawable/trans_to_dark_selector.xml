<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:enterFadeDuration="0" android:exitFadeDuration="0">

    <!-- <bitmap android:src="@drawable/schedual_cl" /> -->

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="2dp" />
            <solid android:color="@color/grey.dark.transparent" />
            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
        </shape>

    </item>
    <!--//////////////////-->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="2dp" />
            <solid android:color="@color/grey.dark.transparent" />
            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
        </shape>

    </item>
    <!--///////////////-->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="2dp" />
            <solid android:color="@color/color_gray" />
            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />

        </shape>
    </item>
    <!--//////////////-->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="2dp" />
            <solid android:color="#00FFFFFF" />
            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
        </shape>

    </item>

</selector>